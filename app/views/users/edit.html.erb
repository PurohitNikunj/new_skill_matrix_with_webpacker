<% if @user.errors.any? %>
  <h2>The following errors prevented the user from being saved </h2>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>

<h1>Edit user details </h1>
<%= form_with(model:@user, local: true, data: { turbo: false }) do |form| %>
  <p>
    <%= form.label :name%>
    <br>
    <%= form.text_field :name%>
  </p>

  <p>
    <%= form.label :phone_number%>
    <br>
    <%= form.number_field :phone_number%>
  </p>

  <p>
    <%= form.label :email%>
    <br>
    <%= form.email_field :email%>
  </p>

  <p>
    <%= form.label :designation%>
    <br>
    <%= form.select :designation, User.designations.keys %>
  </p>
  <p>
    <%= form.label :about%>
    <br>
    <%= form.text_area :about%>
  </p>

  <p>
    <%= form.submit%>
  </p>
<% end %>
